{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "ESNext",
		"lib": [
			"es2017",
			"DOM",
			"DOM.Iterable"
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~/*": [
				"../../*"
			]
		}
	},
	"include": [
		"../../consts/**/*",
		"src/**/*.ts",
		"types/**/*.ts"
	]
}